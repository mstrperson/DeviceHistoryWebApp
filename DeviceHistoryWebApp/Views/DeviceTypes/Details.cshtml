        <thead>
            Devices
        </thead>
        <tr>
            <th>Unique Id</th><th>Serial Number</th><th>Ticket Count</th>
        </tr>
        @foreach(Device dev in Model.Devices)
        {
            <tr>
                <td>@Html.ActionLink(dev.Uid, "Details", "Devices", new { id = dev.Id }, null)</td>
